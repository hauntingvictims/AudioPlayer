<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AudioPlayer.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
        Title="Audio Player"
        Width="450" Height="500"
        x:Class="AudioPlayer.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="20"
        Background="Transparent">
    
    
    
    <Grid RowDefinitions="40,Auto,Auto,Auto,Auto,*" Margin="10">
        <TextBlock Text="Player" HorizontalAlignment="Center" ></TextBlock>
        
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Width="220" Height="220" Margin="10" CornerRadius="5" ClipToBounds="True"
                IsVisible="{Binding HasCoverImage}">
            <Image Source="{Binding CoverImage}" Stretch="Fill" RenderOptions.BitmapInterpolationMode="HighQuality">
                <Image.IsVisible>
                    <MultiBinding Converter="{x:Static BoolConverters.And}">
                        <Binding Path="HasCoverImage" />
                        <Binding Path="CoverImage" Converter="{x:Static ObjectConverters.IsNotNull}" />
                    </MultiBinding>
                </Image.IsVisible>
            </Image>
        </Border>

     
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Width="220" Height="220" Margin="10" CornerRadius="20" Background="#D3D3D3"
                IsVisible="{Binding CoverImage, Converter={x:Static ObjectConverters.IsNull}}">
            <TextBlock Text="â™ª" FontSize="40" Foreground="#333333" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>

     
        <TextBlock Text="{Binding CurrentFile}" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Margin="10" />

        <ProgressBar Value="{Binding Progress}" Maximum="{Binding Duration}" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,5" />
        
       <Grid Grid.Row="3" ColumnDefinitions="Auto,*,Auto">
            <TextBlock Text="{Binding CurrentTimeFormatted}" Grid.Column="0" HorizontalAlignment="Left" Margin="10,10,0,0" />
            <TextBlock Text="{Binding DurationFormatted}" Grid.Column="2" HorizontalAlignment="Right" Margin="0,10,10,0" />
        </Grid>
        
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Margin="10">
            <Button Content="Prev" Margin="5" />
            <Button Content="Play/Pause" Command="{Binding PlayPauseCommand}" Margin="5" />
            <Button Content="Next" Margin="5" />
            <Button Content="Open" Command="{Binding Path=OpenFileCommand}" Margin="5"></Button>
        </StackPanel>
        
    </Grid>
</Window>